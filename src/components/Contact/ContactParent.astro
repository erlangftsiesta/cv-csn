---
// src/components/Contact/ContactParent.astro
import ContactForm from './ContactForm.astro';
import ContactInfo from './ContactInfo.astro';

const contactDetails = {
  phone: '082216072452',
  name: 'Rahmat',
  title: 'Sales & Marketing',
  address: 'Ruko Mall Ciputra Cibubur, Blok CW8 No 6, Jl. Alternatif Cibubur, RT 005/RW011, Jatikarya, Kec. Jatisampurna, Kota Bekasi, Jawa Barat',
  mapsUrl: 'https://maps.google.com/maps?q=-6.382540702819824%2C106.92509460449219&z=17&hl=id',
  locations: [
    { city: 'Bekasi', province: 'Jawa Barat', icon: '🏢' },
    { city: 'Bogor', province: 'Jawa Barat', icon: '🏭' },
    { city: 'Lampung', province: 'Sumatera', icon: '🏗️' },
    { city: 'Medan', province: 'Sumatera Utara', icon: '📦' },
    { city: 'Surabaya', province: 'Jawa Timur', icon: '🚚' }
  ],
  businessHours: [
    { day: 'Senin - Jumat', hours: '08:00 - 17:00 WIB' },
    { day: 'Sabtu', hours: '08:00 - 14:00 WIB' },
    { day: 'Minggu', hours: 'Tutup' }
  ]
};
---

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  .slide-in-left {
    animation: slideInLeft 0.6s ease-out;
  }

  .slide-in-right {
    animation: slideInRight 0.6s ease-out;
  }

  .contact-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(34, 197, 94, 0.15);
  }

  .gradient-text {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

<!-- Hero Section -->
<section class="relative py-16 md:py-20 overflow-hidden bg-gradient-to-br from-slate-50 to-white border-b border-slate-200">
  <div class="container mx-auto max-w-6xl px-4 relative z-10">
    <div class="text-center fade-in-up">
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-emerald-500/10 rounded-full border border-emerald-500/20">
        <span class="text-emerald-600 text-sm font-medium">📞 Hubungi Kami</span>
      </div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 tracking-tight">
        Siap Melayani Kebutuhan Anda
      </h1>
      <p class="mt-4 text-lg text-slate-600 max-w-2xl mx-auto">
        Tim sales kami siap memberikan konsultasi terbaik dan penawaran eksklusif untuk bisnis Anda. Hubungi kami kapan saja!
      </p>
    </div>
  </div>
</section>

<!-- Main Contact Section -->
<section class="py-16 md:py-24 bg-white">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Contact Form -->
      <div class="slide-in-left">
        <ContactForm />
      </div>

      <!-- Contact Information -->
      <div class="slide-in-right">
        <ContactInfo details={contactDetails} />
      </div>
    </div>
  </div>
</section>

<!-- Warehouse Locations -->
<section class="py-16 md:py-24 bg-slate-50 border-t border-slate-200">
  <div class="container mx-auto max-w-6xl px-4">
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 bg-emerald-500/10 rounded-full border border-emerald-500/20">
        <span class="text-emerald-600 text-sm font-medium">🗺️ Jangkauan Kami</span>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-3">
        Tersedia di 5 Lokasi Strategis Indonesia
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Gudang kami tersebar di berbagai wilayah untuk memastikan pengiriman cepat dan efisien
      </p>
    </div>

    <div class="grid md:grid-cols-5 gap-4">
      {contactDetails.locations.map((loc, idx) => (
        <div 
          class="contact-card bg-white rounded-2xl p-6 border border-slate-200 text-center"
          style={`animation-delay: ${idx * 0.1}s`}
        >
          <div class="w-16 h-16 bg-emerald-50 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
            {loc.icon}
          </div>
          <h3 class="font-bold text-lg text-slate-900">{loc.city}</h3>
          <p class="text-sm text-slate-600 mt-1">{loc.province}</p>
          <div class="mt-4 pt-4 border-t border-slate-200">
            <a href="tel:082216072452" class="text-emerald-600 hover:text-emerald-700 text-sm font-semibold transition-colors">
              Hubungi Sekarang →
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Business Hours -->
<section class="py-16 md:py-20 bg-white border-t border-slate-200">
  <div class="container mx-auto max-w-6xl px-4">
    <div class="max-w-2xl mx-auto">
      <div class="bg-gradient-to-br from-emerald-50 to-green-50 rounded-3xl p-8 md:p-12 border border-emerald-200">
        <h3 class="text-2xl font-bold text-slate-900 mb-8 text-center">Jam Operasional</h3>
        <div class="space-y-4">
          {contactDetails.businessHours.map((item) => (
            <div class="flex items-center justify-between p-4 bg-white rounded-xl border border-emerald-200/50 hover:bg-emerald-50/50 transition-colors">
              <span class="font-semibold text-slate-900">{item.day}</span>
              <span class="text-emerald-600 font-bold">{item.hours}</span>
            </div>
          ))}
        </div>
        <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
          <p class="text-sm text-yellow-800 text-center">
            <span class="font-semibold">💡 Tips:</span> Hubungi kami pada jam kerja untuk mendapatkan respon tercepat
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FAQ CTA -->
<section class="py-16 md:py-20 bg-slate-50 border-t border-slate-200">
  <div class="container mx-auto max-w-4xl px-4 text-center">
    <h2 class="text-3xl font-bold text-slate-900 mb-4">Masih Ada Pertanyaan?</h2>
    <p class="text-lg text-slate-600 mb-8">
      Jangan ragu untuk menghubungi kami. Tim customer service kami siap membantu dengan respon cepat dan profesional.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href={`tel:${contactDetails.phone}`}
        class="inline-flex items-center justify-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-4 px-8 rounded-xl transition-all transform hover:scale-105 shadow-lg"
      >
        <span>📞</span>
        <span>Telepon: {contactDetails.phone}</span>
      </a>
      <a 
        href={`https://wa.me/62${contactDetails.phone.slice(1)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-xl transition-all transform hover:scale-105 shadow-lg"
      >
        <span>💬</span>
        <span>WhatsApp Kami</span>
      </a>
    </div>
  </div>
</section>